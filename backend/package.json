{
  "name": "sguru-crud-backend",
  "version": "1.0.0",
  "description": "Serverless Framework REST API with CRUD over DynamoDB, Cognito auth, multi-stage",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "test": "vitest run",
    "itest": "node scripts/integration.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.679.0",
    "@aws-sdk/lib-dynamodb": "^3.679.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "serverless": "^3.39.0",
    "vitest": "^2.1.4",
    "aws-amplify": "^6.3.6",
    "dotenv": "^16.4.5"
  },
  "optionalDependencies": {},
  "loadtest": {
    "howto": "Use k6 CLI. Example: k6 run --env API_BASE_URL=... --env TOKEN=... --env VUS=10 --env DURATION=2m loadtest/k6-crud.js"
  },
  "engines": {
    "node": ">=18"
  }
}


